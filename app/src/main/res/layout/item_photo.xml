<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgPhoto"
        android:scaleType='centerCrop'
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tvUserName"
        android:layout_alignEnd="@+id/tvUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="caption_default_text"
        android:id="@+id/tvCaption"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_below="@+id/tvLikes"
        android:layout_alignRight="@+id/tvLikes"
        android:layout_alignEnd="@+id/tvLikes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popular_photos"
        android:id="@+id/tvLikes"
        android:layout_below="@+id/imgPhoto"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvUserName"
        android:layout_above="@+id/tvCaption"
        android:enabled="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/tvCaption"
        android:layout_alignStart="@+id/tvCaption"
        android:layout_below="@+id/tvLikes" />


</RelativeLayout>
